  {{#each episodes}}
  <table class="table
                table-hover">
    <thead>
      <tr>
        <th class="episode-title" colspan="4">
            <h4>{{title}}</h4>
        </th>
      </tr>
      <tr>
        <th>Time</th>
        <th>Speaker</th>
        <th>Speech</th>
        <th>Media</th>
      </tr>
    </thead>

    <tbody>
        {{#turns}}
          <tr>
            <td class="time">{{timestamp}}</td>
            <td class="speaker-name">{{speakerName}}</td>
            <td class="speech">{{speech}}</td>
            <td>
              <div>
              {{#if hasAccompanyingMedia}}
                {{#accompanyingMedia}}
                <img src="{{source}}"
                     class="accompanying-media
                            img-responsive"
                     alt="{{altText}}">
                {{/accompanyingMedia}}
              {{/if}}
              </div>
            </td>
          </tr>
        {{/turns}}
    </tbody>
  </table>
  {{/each}}

