  {{#each episodes}}
  <table class="table
                table-hover">
    <thead>
      <tr>
        <th class="episode-title" colspan="{{numberOfColumns}}">{{title}}</th>
      </tr>
      <tr>
        {{#each columns}}
          <th>{{this}}</th>
        {{/each}}
      </tr>
    </thead>

    <tbody>
        {{#turns}}
          <tr>
            <td class="time">{{timestamp}}</td>
            <td class="speaker-name">{{speakerName}}</td>
            <td class="speech">{{speech}}</td>
            <td>
              <div>
              {{#if hasAccompanyingMedia}}
                {{#accompanyingMedia}}
                <img src="{{source}}"
                     class="accompanying-media
                            img-responsive"
                     alt="{{altText}}">
                {{/accompanyingMedia}}
              {{/if}}
              </div>
            </td>
          </tr>
        {{/turns}}
    </tbody>
  </table>
  {{/each}}

